  line-height: 16px
.font14
  font-size: 14px
  line-height: 18px
.font16
  font-size: 16px
  line-height: 20px
.font18
  font-size: 18px
  line-height: 24px

.font24
  font-size: 24px
  line-height: 28px

.ellipsis
  text-overflow ellipsis
  overflow hidden
  white-space  nowrap
box-size($width=0,$height=$width)
  width: $width
  height: $height
posa($top,$left)
  position: absolute
  top: $top
  left: $left
posa-r($top,$right)
  position: absolute
  top: $top
  right: $right
bors($size,$color)
  border:$size solid $color

//单标签 input默认样式 eg:通话详情中的单标签 ==liyl
sing-inp()
  display inline-block
  position absolute
  top 0
  opacity 0
  width 100%
  height 100%
  cursor pointer
  z-index 3
//单标签 input+span默认样式 eg:通话详情中的单标签 ==liyl
// 单标签color和border-color颜色更改  ==qyg
sing-sp()
  display inline-block
  bors(1px,#d9d9d9)
  max-width 7em
  line-height 2
  text-align center
  padding 3px 20px
  margin 0 20px 10px 0
  border-radius 2px
  overflow hidden
  color #4c4c4c
//单标签 input:checked+span选中样式 eg:通话详情中的单标签 ==liyl
sing-sped()
  position relative
  bors(1px,#1abc9b)
  color #1abc9b
//单标签 input:checked+span:after选中样式 eg:通话详情中的单标签 ==liyl
sing-af()
  content ""
  posa-r(16px,0)
  display block
  box-size(0,0)
  border-bottom 20px solid #1abc9b
  border-left 20px solid transparent
//单标签 input:checked+span:before选中样式 eg:通话详情中的单标签 ==liyl
sing-be()
  content '√'
  color #fff
  display block
  posa-r(13px,2px)
  background transparent
  z-index 2
  font-style oblique
  font-family monospace
//icon 疑问图标公共样式 eg:软电话条中sms模板 ==liyl
icon-ques()
  content '\?'
  display inline-block
  width 18px
  height 18px
  background #fff
  color #1abc9b
  border-radius 50%
  font-family "Arial",sans-serif
  text-align center
  line-height 18px
  cursor pointer
  bors(1px,#1abc9b)
  @extend .font14
  box-sizing border-box

